<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp">

<!--  "Contact Us"  -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Contact Us"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center of Peace and Spirituality\nGet in touch with us"
        android:textSize="18sp"
        android:layout_marginLeft="55dp"
        android:textAlignment="center"
        android:textStyle="bold"/>



<EditText
    android:id="@+id/title_edit_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Title"/>


<EditText
    android:id="@+id/body_edit_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Body"
    android:layout_marginTop="16dp"
    android:inputType="textMultiLine"
    android:minLines="3"/>

<!-- Send button -->
<Button
    android:layout_width="200dp"
    android:layout_marginLeft="80dp"
    android:layout_height="wrap_content"
    android:text="Send"
    android:textColor="#ffffff"
    android:background="#0E29BD"
    android:layout_marginTop="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_marginTop="32dp"

        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/whatsapp_pak_button"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#4CAF50"
            android:drawableLeft="@drawable/baseline_whatsapp_24"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="WhatsApp (Pak)"
            android:textColor="#ffffff" />


        <Button
            android:id="@+id/whatsapp_usa_button"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#f44336"
            android:drawableLeft="@drawable/baseline_whatsapp_24"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="WhatsApp (USA)"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/good"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#2196F3"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawableLeft="@drawable/baseline_whatsapp_24"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="Goodword Books"
            android:textColor="#ffffff" />


        <Button
            android:id="@+id/website_button"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:background="#3F51B5"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/baseline_web_24"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="Visit Our Website"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>
